{
  "lsp": {
    /*
      ğŸ—’ï¸ note: this config allows tailwind language server to run in CVA and CX objects
    */
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"],
      },
    },
    /*
      Biome
      ğŸ—’ï¸ note: biome is dead to me due to how zed handles language servers and oxlint works great
    */
    "typos": {
      "initialization_options": {
        "config": ".typos.toml",
        "path": "typos-lsp",
        "diagnosticSeverity": "Warning",
        "logLevel": "info",
        "trace.server": "off",
      },
    },
  },

  /*
    âš ï¸ warning: leave disabled until zed fixes this
    ğŸ—’ï¸ note: once zed supports fallbacks switch to tsgo
  */
  // "languages": {
  //   "TypeScript": {
  //     "language_servers": ["tsgo", "vtsls", "!typescript-language-server", "..."],
  //   },
  //   "TSX": {
  //     "language_servers": ["tsgo", "vtsls", "!typescript-language-server", "..."],
  //   },
  // },

  /* Behaviors */
  "format_on_save": "on",

  /* Themes ğŸ¨ */
  "theme": {
    "mode": "system",
    "dark": "Catppuccin Mocha", // âš«
    "light": "Catppuccin Latte", // ğŸŸ¤
    // dark: "Andromeda" // âœ¨
    // light: "One Light" // ğŸ’¡
  },

  /*
    ğŸ—’ï¸ note: see keymap.json
  */
  "base_keymap": "VSCode",

  /* Editor  */
  "tab_size": 2,
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "ui_font_family": "MonoLisa",
  "extend_comment_on_newline": false,
  "soft_wrap": "editor_width",
  "terminal": {
    "dock": "left",
  },
  "scrollbar": {
    "axes": {
      "horizontal": false,
    },
  },
  "project_panel": {
    "dock": "left",
  },
  "file_types": {
    "JSONC": ["tsconfig*.json", "base.json", "internal-package.json"],
  },

  /* Agents ğŸ¤– */
  "agent": {
    "default_profile": "ask",
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "open": true,
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "thinking": true,
        },
        "enable_all_context_servers": false,
        "context_servers": {},
      },
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-latest",
    },
    "inline_assistant_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet",
    },
    "commit_message_model": {
      "provider": "google",
      "model": "gemini-2.5-flash",
    },
    "thread_summary_model": {
      "provider": "google",
      "model": "gemini-2.5-flash",
    },
    "button": true,
  },
  /* Hidden Items */
  "collaboration_panel": {
    "dock": "left",
    "button": false,
  },
}
